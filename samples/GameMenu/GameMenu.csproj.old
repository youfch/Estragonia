<Project Sdk="Godot.NET.Sdk/4.3.0">

	<PropertyGroup>
		<AssemblyTitle>Estragonia GameMenu Sample</AssemblyTitle>
		<TargetFramework>net8.0</TargetFramework>
		<EnableDynamicLoading>true</EnableDynamicLoading>
		<Nullable>enable</Nullable>
		<AnalysisMode>Recommended</AnalysisMode>
		<AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<!-- Create an executable for Avalonia designer support -->
	<PropertyGroup Condition="$(Configuration) == 'Debug'">
		<OutputType>Exe</OutputType>
		<UseAppHost>false</UseAppHost>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<PackageReference PrivateAssets="all" />
	</ItemDefinitionGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" Version="11.3.4" />
		<PackageReference Include="Avalonia.Skia" Version="11.3.4" />
		<PackageReference Include="Avalonia.Themes.Simple" Version="11.3.4" />
		<PackageReference Include="Avalonia.Xaml.Behaviors" Version="11.2.0.1" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="../../src/JLeb.Estragonia/JLeb.Estragonia.csproj" />
	</ItemGroup>

	<ItemGroup>
		<AvaloniaResource Include="UI/Fonts/*.ttf" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Properties/launchSettings.json" />
		<None Include="shaders/*.gdshader" />
		<None Include="readme.md" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Update="Godot.SourceGenerators" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Update="GodotSharp" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Update="GodotSharpEditor" Version="4.3.0" />
	</ItemGroup>

</Project>
